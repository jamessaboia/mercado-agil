<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_base_color="@color/md_theme_light_outlineVariant"
    app:shimmer_colored="true"
    app:shimmer_dropoff="1"
    app:shimmer_duration="600"
    app:shimmer_width_ratio="0.5"
    app:shimmer_highlight_color="@color/md_theme_light_background"
    app:shimmer_tilt="0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/product_item" />
            <include layout="@layout/product_item" />
            <include layout="@layout/product_item" />
            <include layout="@layout/product_item" />
            <include layout="@layout/product_item" />
            <include layout="@layout/product_item" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>