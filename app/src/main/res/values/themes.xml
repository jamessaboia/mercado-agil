<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MercadoÁgil" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/seed</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/seed</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="actionOverflowMenuStyle">@style/CustomOptionsMenu</item>
        <item name="android:textColorHighlight">@color/seed</item>
    </style>

    <style name="CustomOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>
    
    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>